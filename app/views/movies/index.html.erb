    <%= link_to 'New Movie', new_movie_path, class: 'btn btn-success' %>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-primary' %>
              <%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: 'Are you sure you want to delete this movie?' }, class: 'btn btn-danger' %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
