<div class="text-end">
  <%= link_to '+ Customer', new_customer_path, class: 'btn btn-success' %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>
      <td>
        <div class="btn-group" role="group">
          <%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-primary' %>
          <%= link_to 'Delete', customer_path(customer), method: :delete, data: { confirm: 'Are you sure you want to delete this customer?' }, class: 'btn btn-danger' %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
