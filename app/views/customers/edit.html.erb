<h1>Editar Customer</h1>

<%= form_with(model: @customer, url: customer_path(@customer), method: :patch) do |form| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> encontrados:</h2>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar cambios" %>
    <%= link_to 'Cancelar', customers_path %>
  </div>
<% end %>
